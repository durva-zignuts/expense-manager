<body class="addAccount">
    

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <a class="navbar-brand" href="/dashboard/<%= user.id %>">Dashboard</a>

            </ul>
    
            <div class="dropdown ">
                <img src="/images/photo.jpg" class="rounded-circle shadow-4 dropdown-toggle" id="dropdownMenuButton1" data-bs-toggle="dropdown"  style="width: 40px;"
                alt="Avatar"  />
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item" href="/viewProfile/<%= user.id %>">My Profile</a></li>
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
            </div>
    
        </div>
    </nav>
    
    
    <div class="container form-size">
        <div class="form-title">
            <h2 class="AccountHead">Update Profile</h2>
        </div>
        <form class="form-id">

            <div class="form-group accountForm">
                <label for="usr">Name: </label>
                <input name="name" type="text" class="form-control" id="name" value="<%= user.name %>">
            </div>

            <div class="form-group accountForm">
                <label for="usr">Phone Number : </label>
                <input name="phoneNumber" type="text" class="form-control" id="phoneNumber" value="<%= user.phoneNumber %>">
            </div>
           
            <div class="form-group accountForm">
                <label for="usr">Country : </label>
                <select class="form-select" aria-label="Default select example" name="country" id="country" value="<%= user.country %>" required>
                 

                    <% if(user.country == '') { %>
                    <option value="">select type</option>
                    <option >India</option>
                    <option>USA</option>
                    <option >Germany</option>
                    <option >UK</option>
                    <option >Canada</option>
                    <% } %>

                    <% if(user.country == 'India') { %>
                        <option selected>India</option>
                        <option>USA</option>
                        <option >Germany</option>
                        <option >UK</option>
                        <option >Canada</option>
                    <% } %>

                    <% if(user.country == 'USA') { %>
                        <option selected>USA</option>
                        <option >India</option>
                        <option >Germany</option>
                        <option >UK</option>
                        <option >Canada</option>
                    <% } %>

                    <% if(user.country == 'Germany') { %>
                        <option selected>Germany</option>
                        <option >USA</option>
                        <option >India</option>
                        <option >UK</option>
                        <option >Canada</option>
                    <% } %>

                    <% if(user.country == 'UK') { %>
                        <option selected>UK</option>
                        <option >Germany</option>
                        <option >USA</option>
                        <option >India</option>
                        <option >Canada</option>
                    <% } %>

                    <% if(user.country == 'Canada') { %>
                        <option selected>Canada</option>
                        <option >UK</option>
                        <option >Germany</option>
                        <option >USA</option>
                        <option >India</option>
                    <% } %>
                  </select>
            </div>


            <br>
            <button type="button" class="btn btn-primary profile" style="width:90px;" data-id="<%= user.id %>" >Update</button>
        </form>
    </div>
    

    </body>
    
    
    